<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <h3>Details about the post</h3>
      <hr/>
      <table class="table table-striped table-bordered">
        <thead>
        <tr>
          <td><b>Title</b></td>
          <td><b>Body</b></td>
          <td><b>Author</b></td>
          <td><b>Action</b></td>
        </tr>
        </thead>
        <tbody>
        <tr>
          <td><%= @post.title %></td>
          <td><%= @post.body %></td>
          <td><%= @post.author %></td>
          <td><%= link_to "Edit", edit_post_path(@post), :class => 'btn btn-primary'%>
            <%= link_to "Delete", post_path(@post),
                        method: :delete,
                        :class => 'btn btn-danger'%></td>
        </tr>
        </tbody>
      </table>





      <% if @post.comments.length > 0 %>
        <hr>
      <h3>Comments about the post</h3>
      <hr>
      <% @post.comments.each do |comment| %>
          <div class="card card-white post">
            <div class="post-heading">
              <div class="float-left image">
                <img height="50px" src="http://bootdey.com/img/Content/user_1.jpg" class="img-circle avatar" alt="user profile image">
              </div>
              <div class="float-left meta">
                <div class="title h5">
                  <a href="#"><b><%= comment.name %></b></a>
                </div>
              </div>
            </div>
            <div class="post-description">
              <p><%= comment.body %></p>
            </div>
            <%= link_to 'Remove Comment',[comment.post,comment], method: :delete %>
          </div>
      <% end %>
      <br>
      <% end %>

      <hr>
      <h3>Add Comment</h3>
      <hr>
      <%= form_for ([@post,@post.comments.build]) do |f| %>
        <p>
          <%= f.label :name %><br>
          <%= f.text_field :name, class: 'form-control' %>
        </p>
        <p>
          <%= f.label :body %><br>
          <%= f.text_area :body, class: 'form-control' %>
        </p>
        <p>
          <%= f.submit  :class => 'btn btn-primary'%>
        </p>
      <% end %>
    </div>
  </div>
</div>
